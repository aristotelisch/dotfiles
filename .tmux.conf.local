# Sane scrolling
set -g terminal-overrides 'xterm*:smcup@:rmcup@'

# Scroll with mouse wheel
set -g mode-mouse on

# pane border
set-option -g pane-border-fg white #base2
set-option -g pane-active-border-fg blue #base1

